<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lalit.eventit.FrgCreatedEvents"
    android:id="@+id/svCreatedEvents"
    android:background="@color/eventBackground"
    android:layout_marginTop="60sp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llCreatedEvents">
    <com.github.siyamed.shapeimageview.mask.PorterCircularImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/event_it"
        android:fitsSystemWindows="true"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Demo Event"
        android:padding="@dimen/marginBottom"
        android:textSize="@dimen/marginButton"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorPurple"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/marginBottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDJIC Vesu" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surat"/>
        </LinearLayout>
        <TextView
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/colorPurple"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/marginBottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Mar 2018" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 PM"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorPurple"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/marginBottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you Attending this event?"
        android:layout_weight="2"/>
        <Button
            android:id="@+id/btnGoingEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Going"
            android:padding="@dimen/marginBottom"
            android:textColor="@color/colorPurple"
            android:textAllCaps="false"
            android:background="@drawable/btn_login_main"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorPurple"/>

        <Button
            android:id="@+id/btnViewSubevents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurple"
            android:text="View Subevents"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/marginButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_login_main">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Event Details"
           android:textStyle="bold"
           android:padding="@dimen/marginBottom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kuch nai hai jake dekho time pass hi hoga"
            android:textStyle="bold"
            android:padding="@dimen/marginBottom"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_login_main"
        android:layout_marginTop="5sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue"
            android:textStyle="bold"
            android:padding="@dimen/marginBottom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SDJIC Vesu"
            android:textStyle="bold"
            android:padding="@dimen/marginBottom"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlEventCreator"
        android:padding="@dimen/marginBottom"
        android:background="@drawable/btn_login_main"
        android:layout_marginTop="5sp">

        <ImageButton
            android:id="@+id/imEventCreator"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/event_it"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/tvEventCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created By"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imEventCreator"
            android:layout_marginLeft="@dimen/marginButton"/>
        <TextView
            android:id="@+id/tvEventCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lalit Nebhani"
            android:layout_toRightOf="@id/imEventCreator"
            android:layout_below="@id/tvEventCreatedBy"
            android:layout_marginLeft="@dimen/marginButton"/>
       <!-- <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:background="@drawable/et_border"/>-->
    </RelativeLayout>

